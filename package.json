{
  "name": "portal-automacao-inteligente",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.json",
    "build:frontend": "npx vite build",
    "start": "vite preview --host 0.0.0.0 --port ${PORT:-4173}",
    "test": "cross-env NODE_ENV=test USE_INMEMORY_STUBS=true node --import tsx/esm --test",
    "api": "node apps/api/server.js",
    "worker": "node apps/worker/index.js",
    "dev:api": "tsx watch apps/api/server.ts",
    "dev:api:js": "NODE_ENV=development node --watch apps/api/server.js",
    "dev:worker": "tsx watch apps/worker/index.ts",
    "lint": "eslint .",
    "preview": "vite preview",
    "db:generate": "prisma generate",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio",
    "start:api": "node dist/apps/api/server.js",
    "start:worker": "node dist/apps/worker/index.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate:deploy": "prisma migrate deploy"
  },
  "dependencies": {
    "@prisma/client": "^5.20.0",
    "bullmq": "^5.41.0",
    "framer-motion": "^10.16.16",
    "ioredis": "^5.5.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "vite": "^5.0.8",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.2",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "cross-env": "^7.0.3",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "prisma": "^5.20.0",
    "tailwindcss": "^3.3.6",
    "tsx": "^4.19.3",
    "typescript": "^5.7.2"
  },
  "prisma": {
    "seed": "node --import=dotenv/config prisma/seed.js"
